{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/table/macro.njk"         import govukTable %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/fieldset/macro.njk"      import govukFieldset %}

{% from 'macros/inputSearch.njk'               import hmrcInputSearch with context %}


{% block pageTitle %}
  {{ title(messages("penalties.title", year), form.errors) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">


        {% if schemeAssociated %}
            {{ hmrcPageHeading({
                  text: messages("penalties.title", year),
                  section: schemeName
                }) }}
        {% else %}
        <h1 class="govuk-heading-xl">{{ messages("penalties.title", year) }}</h1>
        {% endif %}

      <p class="govuk-body">{{ messages("penalties.pstr", pstr) }}</p>
      <p class="govuk-body">{{ messages("penalties.p1") }}</p>

         {% for table in tables %}
             <h2 id={{ loop.index }}  class="govuk-heading-m">{{ table.header }}</h2>
            <div role="region" aria-labelledby={{ loop.index}} class="govuk-!-margin-bottom-7" tabindex="0">
             {{ govukTable(table.penaltyTable) }}
             </div>
         {% endfor %}

    </div>
  </div>

{% endblock %}
