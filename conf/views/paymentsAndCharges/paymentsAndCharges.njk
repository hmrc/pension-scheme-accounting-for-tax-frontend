{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block pageTitle %}
  {{ title(messages("paymentsAndCharges.h1")) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
            <span class="govuk-caption-xl">{{ schemeName }}</span>
           {{ messages("paymentsAndCharges.h1") }}
        </h1>

        <p class="govuk-body">{{ messages("paymentsAndCharges.reflect.charge.text") }}</p>

        {% for paymentAndChargesTable in seqPaymentsAndChargesTable %}
            {% if paymentAndChargesTable.table.rows.length > 0 %}
                <h3 id ="paymentAndChargesTable" class="govuk-heading-m">{{paymentAndChargesTable.caption}}</h3>
                {{ govukTable(paymentAndChargesTable.table) }}
            {% endif %}
        {% endfor %}

      </div>
    </div>

    <p class="govuk-body"><a id="return" href="{{ returnUrl }}" class="govuk-link">{{ messages("return.to.link", schemeName) }}</a></p>

{% endblock %}
