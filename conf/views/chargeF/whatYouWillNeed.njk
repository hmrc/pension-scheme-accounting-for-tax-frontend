{% extends "includes/layout.njk" %}

{% from "macros/title.njk"  import title %}
{% from "govuk/components/button/macro.njk" import govukButton %}


{% block pageTitle %}
  {{ title(messages("chargeF.whatYouWillNeed.title")) }}
{% endblock %}


{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("chargeF.whatYouWillNeed.heading") }}
        </h1>

        <p class="govuk-body">
        {{ messages("chargeF.whatYouWillNeed.p1") }}
        </p>
        <ul class="govuk-list govuk-list--bullet">
          <li>{{ messages("chargeF.whatYouWillNeed.li1") }}</li>
          <li>{{ messages("chargeF.whatYouWillNeed.li2") }}</li>
        </ul>

        {{ govukButton({
            text: messages("site.continue"),
            href: nextPage,
            attributes: {
                id: "submit"
            }
          }) }}
      </div>
    </div>

  <a href = "{{ returnUrl }}" class="govuk-link"> {{ messages("return.to.link", schemeName) }}</a>

{% endblock %}
