{% macro reportTechnicalIssue(params) %}
    {% if params.serviceId %}
    {% set service = params.serviceId if params.serviceId else params.serviceCode %}
        <a
          lang="{{ params.language }}"
          hreflang="{{params.language}}"
          class="govuk-link {{ params.classList }}"
          rel="noreferrer noopener"
          target="_blank"
          href="{{params.baseUrl}}/contact/problem_reports_nonjs?newTab=true&amp;service={{service}} {%- if params.referrerUrl %} {&amp;referrerUrl={{params.referrerUrl}} {% endif %} "
            >
        {% if params.language === 'cy' %}
                        A yw’r dudalen hon yn gweithio’n iawn? (yn agor mewn tab newydd)
                        {% else %}
                        Is this page not working properly? (opens in new tab)
                    {% endif %}
        </a>
    {% endif %}

{% endmacro %}