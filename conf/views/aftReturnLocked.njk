{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "govuk/components/button/macro.njk"        import govukButton %}

{% block pageTitle %}
  {{ title(messages("aftReturnLocked.title")) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("aftReturnLocked.heading") }}
        </h1>

        <p class="govuk-body">{{ messages("aftReturnLocked.p1") }}</p>
        <p class="govuk-body">{{ messages("aftReturnLocked.p2") }}</p>

        {{ govukButton({
            href: selectAnotherUrl,
            attributes: {id: "select-another"},
            text: messages("site.select_another_aft_return")
        }) }}

        <p class="govuk-body">
            <a href="{{ returnUrl }}" class="govuk-link">{{ messages("return.to.link", schemeName) }}</a>
        </p>
      </div>
    </div>

{% endblock %}
