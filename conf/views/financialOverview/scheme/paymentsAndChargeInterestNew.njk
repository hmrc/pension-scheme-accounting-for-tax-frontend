{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/summary-list/macro.njk"  import govukSummaryList %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% block pageTitle %}
  {{ title(messages(chargeType)) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {{ hmrcPageHeading({
          text: chargeType,
          section: schemeName
        }) }}

        <div class="govuk-grid-row">
           <div class="govuk-grid-column-one-half">
                <h3 class="govuk-caption-m govuk-!-margin-bottom-1">
                   {{ messages("pension.scheme.interest.dueAmount.new") }}
                </h3>
                <p class="govuk-heading-m govuk-!-margin-top-0">{{ interestDueAmount }}</p>
           </div>
        </div>

        {% if chargeDetailsList.length > 0 %}
            <h2 id ="paymentAndChargeDetails" class="govuk-heading-m">{{tableHeader}}</h2>
              {{ govukSummaryList({
                 rows: chargeDetailsList
              }) }}
        {% endif %}


        {{ govukInsetText({
          html: insetText
        }) }}

      </div>
    </div>

    <p class="govuk-body"><a id="return" href="{{ returnUrl }}" class="govuk-link">{{ messages("return.to.link", returnLinkBasedOnJourney) }}</a></p>

{% endblock %}
