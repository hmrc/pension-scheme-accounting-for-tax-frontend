{% extends "includes/layout.njk" %}

{% from "macros/title.njk"  import title %}
{% from "govuk/components/button/macro.njk" import govukButton %}


{% block pageTitle %}
  {{ title(messages("fileupload.upload.success.title")) }}
{% endblock %}


{% block mainContent %}


    <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">

            <h1 class="govuk-heading-xl">
              {{ messages("fileupload.upload.success.heading") }}
            </h1>

            <p class="govuk-body">{{ messages("fileupload.upload.success.p",fileName) }}</p>

            {{ govukButton({
                            href: viewModel.submitUrl,
                            attributes: {id: "submit"},
                            text: messages("site.continue")
                          }) }}

        <p class="govuk-body"><a href="{{viewModel.returnUrl}}" class="govuk-link"> {{ messages("return.to.link", viewModel.schemeName) }}</a>
        </p>
{% endblock %}