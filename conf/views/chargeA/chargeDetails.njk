{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/date-input/macro.njk"    import govukDateInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block pageTitle %}
  {{ title(messages("chargeA.chargeDetails.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <h1 class="govuk-heading-xl">{{messages('chargeA.chargeDetails.heading')}}</h1>

        <form action="{{ submitUrl }}" method="post">

          {{ csrf() | safe }}

          {{ govukInput({
            id: "members",
            label: {
              text: messages('chargeA.chargeDetails.members.title'),
              isPageHeading: false,
              classes: "govuk-form-label--s"
            },
            name: "members",
            type: "text",
            value: form.members.value,
            classes: "govuk-input--width-10",
            errorMessage: form.members.error
          }) }}

        {{ govukInput({
          id: "amountTaxDue20pc",
          label: {
            text: messages('chargeA.chargeDetails.amountTaxDue20pc.label'),
            isPageHeading: false,
            classes: "govuk-form-label--s"
          },
          name: "amountTaxDue20pc",
          type: "text",
          value: form.amountTaxDue20pc.value,
          classes: "govuk-input--width-10",
          errorMessage: form.amountTaxDue20pc.error
        }) }}

         {{ govukInput({
            id: "amountTaxDue50pc",
            label: {
              text: messages('chargeA.chargeDetails.amountTaxDue50pc.label'),
              isPageHeading: false,
              classes: "govuk-form-label--s"
            },
            name: "amountTaxDue50pc",
            type: "text",
            value: form.amountTaxDue50pc.value,
            classes: "govuk-input--width-10",
            errorMessage: form.amountTaxDue50pc.error
          }) }}


          {{ govukButton({
            attribute: {id: "submit"},
            text: messages("site.continue")
          }) }}

        </form>

      </div>
    </div>

   <a href= {{ viewModel.returnUrl }} class="govuk-link"> {{ messages("return.to.link", viewModel.schemeName) }}</a>

{% endblock %}
