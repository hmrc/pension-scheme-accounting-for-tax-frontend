<div class="card" id="aft-returns">
    <div class="card-body">
        <h2 class="card-heading govuk-heading-m">
            {{ messages("pspDashboardAftReturnsCard.h2") }}
        </h2>
        {% for subHeading in aft.subHeadings %}
            <p class="card-sub-heading bold govuk-body-m">
                <span class="govuk-!-display-block">{{ subHeading.span }}</span>
                 <span class="font-small govuk-!-font-size-19 bold govuk-!-font-weight-bold">{{ subHeading.h3 }} </span>
            </p>
        {% endfor %}
    </div>
    <div class="card-action">
       <ul class="govuk-list">
            {% for link in aft.links %}
                <li>
                    <a id="{{ link.id }}" class=govuk-link href="{{ link.url }}">{{ link.linkText }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>