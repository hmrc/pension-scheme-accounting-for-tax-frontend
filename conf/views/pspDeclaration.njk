{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  {{ title(messages("pspDeclaration.title")) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("pspDeclaration.heading") }}
        </h1>

        <p class="govuk-body">
          {{ messages("pspDeclaration.p1") }}
        </p>
        <ul class="govuk-list govuk-list--bullet">
          <li>{{ messages("pspDeclaration.li1") }}</li>
          <li>{{ messages("pspDeclaration.li2") }}</li>
        </ul>
        {{ govukButton({
            href: viewModel.submitUrl,
            attributes: {id: "submit"},
            text: messages("site.agree_and_submit")
        }) }}
      </div>
    </div>

    <a href="{{viewModel.returnUrl}}" class="govuk-link"> {{ messages("return.to.link", viewModel.schemeName) }}</a>

{% endblock %}
