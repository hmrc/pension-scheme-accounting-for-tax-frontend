{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/radios/macro.njk"        import govukRadios %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block pageTitle %}
  {{ title(messages("chargeG.addMembers.title", quarterStart, quarterEnd), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <h1 id="chargeG_h1" class="govuk-heading-xl">{{messages('chargeG.addMembers.heading', quarterStart, quarterEnd)}}</h1>

        <form action="{{  viewModel.submitUrl }}" method="post" autocomplete="off" novalidate >

          {{ csrf() | safe }}


          {% for i in range(0, members.length) -%}
            {{ members[i].name }}
          {%- endfor %}
        <div role="region" aria-labelledby="chargeG_h1" class="govuk-!-margin-bottom-7" tabindex="0">
          {{ govukTable(table) }}
         </div>
          {% if canChange %}
              {{ govukRadios({
                      classes: "govuk-radios--inline",
                      name: 'value',
                      fieldset: {
                        legend: {
                          text: messages('chargeG.addMembers.label'),
                          isPageHeading: false,
                          classes: "govuk-fieldset__legend--s"
                        }
                      },
                      items: radios,
                      errorMessage: form.value.error
              }) }}

              {{ govukButton({
                    text: messages("site.continue"),
                    attributes: {id: "submit"}
              }) }}
          {% endif %}

        </form>

      </div>
    </div>

   <a href="{{ viewModel.returnUrl }}" class="govuk-link"> {{ messages("return.to.link", viewModel.schemeName) }}</a>

{% endblock %}
