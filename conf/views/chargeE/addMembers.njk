{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/date-input/macro.njk"    import govukDateInput %}
{% from "govuk/components/radios/macro.njk"        import govukRadios %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block pageTitle %}
  {{ title(messages("chargeE.addMembers.title", quarterStart, quarterEnd), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <h1 class="govuk-heading-xl">{{messages('chargeE.addMembers.heading', quarterStart, quarterEnd)}}</h1>

        <form action="{{ submitUrl }}" method="post">

          {{ csrf() | safe }}

          {{ govukRadios({
                              classes: "govuk-radios--inline",
                              name: 'value',
                              fieldset: {
                                legend: {
                                  text: messages('chargeE.addMembers.label'),
                                  isPageHeading: false,
                                  classes: "govuk-fieldset__legend--s"
                                }
                              },
                              items: radios,
                              errorMessage: form.value.error
          }) }}

          {{ govukButton({
                            text: messages("site.continue"),
                            attributes: {id: "submit"}
                  }) }}

        </form>

      </div>
    </div>

   <a href="{{ viewModel.returnUrl }}" class="govuk-link"> {{ messages("return.to.link", viewModel.schemeName) }}</a>

{% endblock %}
