{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/date-input/macro.njk"    import govukDateInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block pageTitle %}
  {{ title(messages("chargeEDetails.title", memberName), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <h1 class="govuk-heading-xl">{{messages('chargeEDetails.heading', memberName)}}</h1>

        <form action="{{ submitUrl }}" method="post">

          {{ csrf() | safe }}

          {{ govukInput({
            id: "chargeAmount",
            label: {
              text: messages('chargeEDetails.chargeAmount.label'),
              isPageHeading: false,
              classes: "govuk-form-label--s"
            },
            name: "chargeAmount",
            type: "text",
            value: form.chargeAmount.value,
            classes: "govuk-input--width-10",
            errorMessage: form.chargeAmount.error
          }) }}

          {{ govukDateInput({
                      id: "dateNoticeReceived",
                      fieldset: {
                        legend: {
                          text: messages('chargeEDetails.dateNoticeReceived.label'),
                          isPageHeading: false,
                          classes: "govuk-fieldset__legend--s"
                        }
                      },
                      errorMessage: date.error,
                      items: date.items
                    }) }}

          {{ govukButton({
                  text: messages("site.continue"),
                  attributes: {id: "submit"}
                }) }}

        </form>

      </div>
    </div>

   <a href= "{{ viewModel.returnUrl }}" class="govuk-link"> {{ messages("return.to.link", viewModel.schemeName) }}</a>

{% endblock %}
