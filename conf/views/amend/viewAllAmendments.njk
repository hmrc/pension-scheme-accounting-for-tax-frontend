{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block pageTitle %}
  {{ title(messages("allAmendments.title")) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          <span class="govuk-caption-xl">{{ messages('allAmendments.h1.caption') }}</span>
           {{ messages("allAmendments.title") }}
        </h1>

        {% if addedTable.rows.length > 0 %}
            {{ govukTable(addedTable) }}
        {% endif %}

        {% if deletedTable.rows.length > 0 %}
            {{ govukTable(deletedTable) }}
        {% endif %}

         {% if updatedTable.rows.length > 0 %}
            {{ govukTable(updatedTable) }}
        {% endif %}
      </div>
    </div>

    <p class="govuk-body"><a href="{{ viewModel.submitUrl }}" class="govuk-link"> {{ messages("return.to.submission") }}</a></p>

    <p class="govuk-body"><a href="{{ viewModel.returnUrl }}" class="govuk-link"> {{ messages("return.to.link", viewModel.schemeName) }}</a></p>

{% endblock %}
