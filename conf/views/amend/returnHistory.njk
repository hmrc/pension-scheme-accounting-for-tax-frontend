{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block pageTitle %}
  {{ title(messages("returnHistory.title", quarterStart, quarterEnd)) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <span class="govuk-caption-xl">{{schemeName}}</span>

        <h1 class="govuk-heading-xl">{{messages("returnHistory.title", quarterStart, quarterEnd)}}</h1>
        {{ govukTable(versions) }}

      </div>
    </div>

    {% if paymentsAndChargesUrl %}
          <p class="govuk-body"><a id="payments-charges" href="{{ paymentsAndChargesUrl }}" class="govuk-link"> {{ messages("paymentsAndCharges.partial.view.link") }}</a></p>
    {% endif %}

    <p class="govuk-body"><a href="{{ returnUrl }}" class="govuk-link"> {{ messages("return.to.link", schemeName) }}</a></p>

{% endblock %}
